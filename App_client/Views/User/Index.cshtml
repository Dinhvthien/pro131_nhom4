@model Pro131_Nhom4.Data.User

@{
    ViewData["Title"] = "Index";
}

<section class="vh-100" style="background-color: #f4f5f7;">
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col col-lg-6 mb-4 mb-lg-0">
                <div class="card mb-3" style="border-radius: .5rem;">
                    <div class="row g-0">
                        <div class="col-md-4 gradient-custom text-center text-white"
                             style="border-top-left-radius: .5rem; border-bottom-left-radius: .5rem;">
                            <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-chat/ava1-bg.webp"
                                 alt="Avatar" class="img-fluid my-5" style="width: 80px;" />
                            <a  asp-controller="Login" asp-action="Logout" class="btn btn-primary">Logout</a>
                        </div>
                        <div class="col-md-8">
                            <div class="card-body p-4">
                                <h6>@Model.UserName</h6>
                                <hr class="mt-0 mb-4">
                                <div class="row pt-1">
                                    <div class="col-6 mb-3">
                                        <h6>Email</h6>
                                        <p class="text-muted">@Model.Email</p>
                                    </div>
                                    <div class="col-6 mb-3">
                                        <h6>Số điện thoại</h6>
                                        <p class="text-muted">@Model.PhoneNumber</p>
                                    </div>
                                </div>
                                <h6>Khác</h6>
                                <hr class="mt-0 mb-4">
                                <div class="row pt-1">
                                    <div class="col-6 mb-3">
                                        <h6>Địa chỉ</h6>
                                        <p class="text-muted">@Model.Address</p>
                                    </div>
                                    <div class="col-6 mb-3">
                                        <h6>Rank</h6>
                                        <p class="text-muted">@ViewData["rank"]</p>
                                    </div>
                                </div>
                                <div class="d-flex justify-content-start">
                                    
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>