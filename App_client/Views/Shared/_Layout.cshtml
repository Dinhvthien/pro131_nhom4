	<link rel="stylesheet" href="~/css/style.css">

</head>
<body>

	<div class="site-wrap">
		<header class="site-navbar" role="banner">
			<div class="site-navbar-top">
				<div class="container">
					<div class="row align-items-center">

						<div class="col-6 col-md-4 order-2 order-md-1 site-search-icon text-left">
							<form asp-action="Search" asp-controller="Product" method="get" class="site-block-top-search">
								<span class="icon icon-search2"></span>
								<input type="text" class="form-control border-0" placeholder="Search" name="search">
							</form>
						</div>

						<div class="col-12 mb-3 mb-md-0 col-md-4 order-1 order-md-2 text-center">
							<div class="site-logo">
								<a href="index.html" class="js-logo-clone">Shoppers</a>
							</div>
						</div>
						

						@if (User.IsInRole("User"))
						{
							<div class="col-6 col-md-4 order-3 order-md-3 text-right">
								<div class="site-top-icons">
									<ul>
										<li><a asp-controller="User" asp-action="Index"><span class="icon icon-person"></span></a></li>
										<li><a asp-controller="FavoriteProducts" asp-action="Index"><span class="icon icon-heart-o"></span></a></li>
                                        <li>
                                            <a asp-controller="Cart" asp-action="Index" class="site-cart">
                                                <span class="icon icon-shopping_cart"></span>
												
                                            </a>
                                        </li>
										<li>
											<a asp-controller="Checkour" asp-action="billUser">
